<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:nu="http://schemas.saka-pon.net/natureunison" xmlns:KinectTestWpf="clr-namespace:KinectTestWpf"
		x:Class="LeapTestWpf.MainWindow"
        Title="MainWindow" Height="800" Width="1200" FontSize="36" WindowState="Maximized">
	<Window.Resources>
		<KinectTestWpf:VectorStringConverter x:Key="VectorStringConverter"/>
	</Window.Resources>
	<Window.DataContext>
		<nu:HandTracker/>
	</Window.DataContext>
	<Grid>
		<Grid HorizontalAlignment="Left" VerticalAlignment="Center" Margin="30,0,0,0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="380"/>
				<ColumnDefinition Width="Auto"/>
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
			</Grid.RowDefinitions>
			<TextBlock Text="Palm Position:"/>
			<TextBlock Text="Finger Tip Position:" Grid.Row="1"/>
			<TextBlock Text="Finger Direction:" Grid.Row="2"/>
			<TextBlock Text="Finger Orientation:" Grid.Row="3"/>
			<TextBlock Text="{Binding PalmPosition, Converter={StaticResource VectorStringConverter}, Mode=OneWay}" Grid.Column="1"/>
			<TextBlock Text="{Binding FingerTipPosition, Converter={StaticResource VectorStringConverter}, Mode=OneWay}" Grid.Row="1" Grid.Column="1"/>
			<TextBlock Text="{Binding FingerDirection, Converter={StaticResource VectorStringConverter}, Mode=OneWay}" Grid.Row="2" Grid.Column="1"/>
			<TextBlock Text="{Binding FingerOrientation, Converter={StaticResource VectorStringConverter}, Mode=OneWay}" Grid.Row="3" Grid.Column="1"/>
		</Grid>
	</Grid>
</Window>
